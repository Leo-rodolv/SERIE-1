#include <stdio.h>
int main() 
{
    int num1, num2, num3;
    printf("Ingrese los 3 numeros\n");
    scanf("%i %i %i",&num1,&num2,&num3);
    // Ordenar los números en forma descendente
    if (num1 > num2) 
    {
        if (num1 > num3) 
        {    // num1 es el más grande
            if (num2 > num3) 
            {
                printf("Los números ordenados en forma descendente son: %d, %d, %d\n", num1, num2, num3);
            } 
            else 
            {
                printf("Los números ordenados en forma descendente son: %d, %d, %d\n", num1, num3, num2);
            }
        } 
        else 
        {    // num3 es el más grande
            printf("Los números ordenados en forma descendente son: %d, %d, %d\n", num3, num1, num2);
        }
    } 
    else 
    {
        if (num2 > num3) 
        {   // num2 es el más grande
            if (num1 > num3) 
            {
                printf("Los números ordenados en forma descendente son: %d, %d, %d\n", num2, num1, num3);
            } 
            else 
            {
                printf("Los números ordenados en forma descendente son: %d, %d, %d\n", num2, num3, num1);
            }
        } 
        else 
        {   // num3 es el más grande
            printf("Los números ordenados en forma descendente son: %d, %d, %d\n", num3, num2, num1);
        }
    }
    return 0;
}
