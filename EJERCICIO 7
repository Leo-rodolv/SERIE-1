#include<stdio.h>
int main() 
{
  int z = 7, i = 1;
  float suma = 0.0;
  // Ciclo while para calcular la suma de los 15 primeros elementos
  while (i <= 15) {
    float zn = (float)(z + 0.5) / (1 << (i - 1));
    suma += zn;
    z += 2;
    i++;
  }
  printf("La suma de los primeros 15 elementos de la serie es: %.2f\n", suma);
  return 0;
}
